<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/lighterGray"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/secondaryBG" />
                    <corners android:radius="3.0dip" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/brandAccent" />
                    <stroke android:width="1.0dip" android:color="@color/button_secondary_stroke" />
                    <corners android:radius="3.0dip" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>