<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <solid android:color="@color/birdGreen" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <solid android:color="@color/secondaryBG" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <solid android:color="@color/birdWhite" />
            <stroke android:width="1.0dip" android:color="@color/birdLightGray" />
        </shape>
    </item>
</selector>