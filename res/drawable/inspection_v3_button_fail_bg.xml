<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <solid android:color="@color/lightRed" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <solid android:color="@color/birdRed" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <solid android:color="@color/secondaryBG" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <solid android:color="@color/primaryBG" />
            <stroke android:width="1.0dip" android:color="@color/secondaryBG" />
        </shape>
    </item>
</selector>